include base

exec systemctl --user import-environment DISPLAY WAYLAND_DISPLAY SWAYSOCK XDG_CURRENT_DESKTOP
exec hash dbus-update-activation-environment 2>/dev/null && \
     dbus-update-activation-environment --systemd DISPLAY WAYLAND_DISPLAY SWAYSOCK XDG_CURRENT_DESKTOP XDG_CURRENT_DESKTOP=sway

set $mod Mod4

input "type:keyboard" {
    xkb_layout se
    xkb_variant ,nodeadkeys
    xkb_options grp:alt_shift_toggle
}

input "type:touchpad" {
    dwt disabled
}

input "type:pointer" {
    accel_profile flat
}

output * mode 1920x1080@165.000Hz

bindsym $mod+Shift+e exec "swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit Sway? This will end your Wayland session.' -B 'Yes, exit Sway' 'swaymsg exit'"

exec_always --no-startup-id killall swaybg
exec_always --no-startup-id bash -lic 'swaybg -i `find ~/Pictures/Wallpapers -type f | xargs shuf -n1 -e` -m fill'

bindsym Print      exec grim ~/Screenshot.png
bindsym $mod+Print exec grim -g "$(slurp -b '#00000000' -c '#ff0000ff' -w 1)" ~/Screenshot.png

exec_always swaycolors.sh

bindsym $mod+f9 XF86AudioPlay
