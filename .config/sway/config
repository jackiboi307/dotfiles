# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    status_command ~/Lemonbar/main.sh
    font pango: SourceCodeVF Normal 8
    workspace_min_width 0

    colors {
        background #000000e3

        focused_workspace  #333333e3 #000000e0 #dddddd 
        active_workspace   #181818e3 #000000e0 #888888 
        inactive_workspace #181818e3 #000000e0 #888888 
        urgent_workspace   #181818e3 #000000e0 #888888 
    }
}

