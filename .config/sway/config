# resize window (you can also use the mouse for that)
# mode "resize" {
# These bindings trigger as soon as you enter the resize mode

# Pressing left will shrink the window’s width.
# Pressing right will grow the window’s width.
# Pressing up will shrink the window’s height.
# Pressing down will grow the window’s height.
bindsym $mod+ctrl+l resize shrink width  64 px or 4 ppt
bindsym $mod+ctrl+k resize grow height   64 px or 4 ppt
bindsym $mod+ctrl+j resize shrink height 64 px or 4 ppt
bindsym $mod+ctrl+h resize grow width    64 px or 4 ppt

# same bindings, but for the arrow keys
bindsym $mod+ctrl+Right resize shrink width  64 px or 4 ppt
bindsym $mod+ctrl+Up    resize grow height   64 px or 4 ppt
bindsym $mod+ctrl+Down  resize shrink height 64 px or 4 ppt
bindsym $mod+ctrl+Left  resize grow width    64 px or 4 ppt

# back to normal: Enter or Escape or $mod+r
# bindsym Return mode "default"
# bindsym Escape mode "default"
# bindsym $mod+r mode "default"
# }

